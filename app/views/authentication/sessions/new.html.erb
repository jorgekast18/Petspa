<%= form_with(url: sessions_path) do |form| %>
  <div>
    <%= form.label :login, 'Username' %>
    <%= form.text_field :login, required: true %>
  </div>

  <div>
    <%= form.label :password, 'Password' %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Forgot your password?", new_password_reset_path %>